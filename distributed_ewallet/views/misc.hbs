<!doctype html>
<html lang="en">
  <head>
    <title>eWallet Web UI</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  </head>
  <body>
    <div class="row">
      <dov class="col col-md-6 mr-auto ml-auto">
        <div class="container">
          <h1> Distributed eWallet System </h1>
          <p> <em> You are on CLI connected to: {{ env.APP_URL }} by {{ env.APP_ID }}</em> </p>

          <ul class="nav nav-pills" style="margin-bottom: 2rem">
            <li class="nav-item">
              <a class="nav-link" href="/webui/ping">Ping</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/webui/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/webui/transfer">Transfer</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/webui/saldo">Saldo Lokal</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/webui/totalSaldo">Total Saldo</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/webui/misc">Misc</a>
            </li>
          </ul>

          <h2> Table of Contents </h2>
          <ul>
            <li><a href="#error-codes">Error Codes</a></li>
          </ul>

          <h2 id="error-codes"> Error Codes </h2>
          <table class="table table-sm">
            <thead>
              <th> Description </th>
              <th> Codes </th>
            </thead>
            <tbody>
              <tr>
                <td> SUCCESS </td>
                <td> 1 </td>
              </tr>
              <tr>
                <td> UNREGISTERED </td>
                <td> -1 </td>
              </tr>
              <tr>
                <td> QUORUM </td>
                <td> -2 </td>
              </tr>
              <tr>
                <td> HOST_DOWN </td>
                <td> -3 </td>
              </tr>
              <tr>
                <td> DATABASE </td>
                <td> -4 </td>
              </tr>
              <tr>
                <td> LIMIT_EXCEEDED </td>
                <td> -5 </td>
              </tr>
              <tr>
                <td> UNDEFINED </td>
                <td> -99 </td>
              </tr>
              <tr>
                <td> IP_NOT_FOUND </td>
                <td> -404 </td>
              </tr>
              <tr>
                <td> INCONSISTENT_DATA </td>
                <td> -666 </td>
              </tr>
            </tbody>
          </table>

          <h2 id="user-list"> Daftar Akun </h2>
          <table class="table table-sm" id="user-list">
            <thead>
              <th> ID </th>
              <th> Nama </th>
              <th> Saldo </th>
            </thead>
            <tbody>
              {{#each users}}
              <tr>
                <td> {{_id}} </td>
                <td> {{name}} </td>
                <td> {{balance}} </td>
              </tr>
              {{/each}}
            </tbody>
          </table>

          <h2 id="user-list"> Daftar Quorum </h2>
          <table class="table table-sm" id="user-list">
            <thead>
              <th> NPM </th>
              <th> IP </th>
            </thead>
            <tbody>
              {{#each clusterMembers as |npm ip|}}
              <tr>
                <td> {{npm}} </td>
                <td> {{ip}} </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
  </body>
</html>
